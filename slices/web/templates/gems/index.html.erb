<div class="py-5 border-top">
  <div class="container">
    <div class="d-flex align-items-center mb-3">
      <div class="h2 mb-0">Browse gems</div>
      <form action="/gems/gemfile" method="POST" enctype="multipart/form-data" class="ms-3" data-autosave>
        <input type="file" name="gemfile" class="d-none"/>
        <input type="hidden" name="_csrf_token" value="<%= csrf_token %>"/>
        <button data-upload class="btn btn-primary" data-bs-toggle="tooltip" data-bs-title="Upload your Gemfile to see if there are any gems in our database">
          Upload Gemfile
        </button>
      </form>
    </div>
    <%= render :gems_list %>
    <div class="d-flex justify-content-center mt-5">
      <nav>
        <ul class="pagination">
          <!-- TODO: skip some pages -->
          <% pager.total_pages.times do |i| %>
            <li class="page-item <%= 'active' if pager.current_page == i + 1 %>">
              <a class="page-link" href="/gems?page=<%= i + 1 %>"><%= i + 1 %></a>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</div>
