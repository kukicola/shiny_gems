<% gems.each do |gem| %>
  <a href="/gems/<%= gem.name %>" class="card text-decoration-none text-black mt-2">
    <div class="card-body">
      <h5 class="card-title"><%= gem.name %></h5>
      <p class="card-text"><%= gem.description %></p>
    </div>
    <div class="text-center card-footer">
      <div class="row">
        <div class="col-md-3">
          <%= gem.repo.stars %>
          <div class="text-muted small">
            GitHub stars
          </div>
        </div>
        <div class="col-md-3 mt-2 mt-md-0">
          <%= gem.downloads %>
          <div class="text-muted small">
            RubyGems downloads
          </div>
        </div>
        <div class="col-md-3 mt-2 mt-md-0">
          <%= gem.issues_count %>
          <div class="text-muted small">
            Issues count
          </div>
        </div>
        <div class="col-md-3 mt-2 mt-md-0">
          <%= gem.favorites_count %>
          <div class="text-muted small">
            Favorites
          </div>
        </div>
      </div>
    </div>
  </a>
<% end %>
