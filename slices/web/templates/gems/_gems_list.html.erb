<% gems.each do |gem| %>
  <a href="/gems/<%= gem.id %>" class="card text-decoration-none text-black mt-2">
    <div class="card-body">
      <div class="d-flex flex-sm-row flex-column">
        <div class="flex-grow-1">
          <h5 class="card-title"><%= gem.name %></h5>
          <p class="card-text"><%= gem.description %></p>
        </div>
        <div class="text-sm-end flex-shrink-0 ps-sm-2 mt-3 mt-sm-0">
          <div class="card-subtitle text-muted" data-bs-toggle="tooltip" data-bs-title="GitHub stars">
            <%= gem.repo.stars %> <i class="bi bi-star ms-1"></i>
          </div>
          <div class="card-subtitle mt-1 text-muted" data-bs-toggle="tooltip" data-bs-title="RubyGems downloads">
            <%= gem.downloads %> <i class="bi bi-download ms-1"></i>
          </div>
          <div class="card-subtitle mt-1 text-muted" data-bs-toggle="tooltip" data-bs-title="Issues count">
            <%= gem.issues_count %> <i class="bi bi-record-circle ms-1"></i>
          </div>
        </div>
      </div>
    </div>
  </a>
<% end %>
