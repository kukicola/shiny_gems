<div class="py-5 border-top">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <div class="h2 mb-0">Gems from your Gemfile</div>
    </div>
    <% if gems.empty? %>
      <div class="card">
        <div class="card-body py-5 text-center">
          <div class="h3">Couldn't find any gems from your gemfile in our database</div>
          <div class="text-big">That's ok, you can still help with any other gem</div>
          <a href="/gems" class="btn btn-primary btn-lg mt-3">Browse all gems</a>
        </div>
      </div>
    <% else %>
      <%= render :gems_list %>
    <% end %>
  </div>
</div>
