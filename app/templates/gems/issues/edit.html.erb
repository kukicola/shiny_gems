<div class="py-5 border-top">
  <form action="/gems/<%= current_gem.id %>/issues" method="POST">
    <input type="hidden" name="_csrf_token" value="<%= csrf_token %>">
    <div class="container">
      <div class="d-flex justify-content-between align-items-end mb-3">
        <div class="h2 mb-0">Select issues</div>
        <div>
          <input type="submit" class="btn btn-primary" value="Save"/>
        </div>
      </div>

      <div class="row">
        <div class="col-9">
          <div class="list-group text-big">
            <% issues.each do |issue| %>
              <div class="list-group-item p-3">
                <div class="form-check">
                  <input type="checkbox" name="issues_ids[]" value="<%= issue[:id] %>" class="form-check-input"/>
                  <a href="<%= issue[:html_url] %>" class="text-decoration-none text-black" target="_blank">
                    <%= issue[:title] %>
                    <i class="bi-box-arrow-up-right ms-1"></i>
                  </a>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <div class="col-3">
          <div class="card">
            <div class="card-body text-muted">
              Select issues you need help with. Issues will be automatically removed from ShinyGems when you close them on GitHub.
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>
