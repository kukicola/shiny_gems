<div class="py-5 border-top">
  <div class="container">
    <div class="d-flex justify-content-between align-items-end mb-3">
      <div class="h2 mb-0">My gems</div>
      <div>
        <% if gems.size > 0 %>
          <a href="/gems/new" class="btn btn-primary">Add gem</a>
        <% end %>
      </div>
    </div>
    <% if gems.size > 0 %>
      <%= render :gems_list %>
    <% else %>
      <div class="card">
        <div class="card-body py-5 text-center">
          <div class="h3">You don't have any gems</div>
          <a href="/gems/new" class="btn btn-primary btn-lg mt-3">Add your first gem</a>
        </div>
      </div>
    <% end %>
  </div>
</div>
