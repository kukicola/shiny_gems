<div class="py-5 border-top">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-4">
        <div class="h2">Add new gem</div>
        <div class="card">
          <div class="card-body">
            <form action="/gems" method="POST">
              <input type="hidden" name="_csrf_token" value="<%= csrf_token %>">
              <label for="repository" class="form-label">Select repository</label>
              <select class="form-select" name="repository">
                <% repos.each do |repo| %>
                  <option value="<%= repo[:full_name] %>"><%= repo[:full_name] %></option>
                <% end %>
              </select>
              <input type="submit" class="btn btn-primary mt-3" value="Submit">
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
